<% var messages = ["PREACH TO ME!", "Get my speech", "Just do it already!", "ME WANT SPEECH!"]; %>

<!DOCTYPE html>
<html class="make">
    <head>
        <% include header.ejs %>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/json2/20150503/json2.min.js"></script>
        <script src="/script/make.js"></script>
    </head>
    <body>
        <h3 class="focus middle" id="loading">Loading...</h3>
        <div id="rotate" class="topics">
            <div class="focus middle">
                <h1>Rotate da device!</h1>
            </div>
        </div>
        <div id="topics" class="focus topics">
            <div id="topics-content"></div>
        </div>
        <div class="focus" id="main">
            <div class="topics">
                <noscript><h1>What? Why no JavaScript!</h1></noscript>
                <input type="text" id="userInput" placeholder="Enter a topic" />
                <p>Stuck? Try some of these!</p>
                <p id="trends">
                    <a class="button hidden">&nbsp;</a>
                </p>
                <p><small><strong>DISCLAIMER: </strong> please don't take offence. BTW, don't sue us. Just don't.</small></p>
                <p><a class="button" id="submit"><%= messages[Math.floor(Math.random() * messages.length)] %></a></p>
            </div>
            <div id="speakers">
                <h2>Choose a speaker</h2>
                <div class="list"></div>
                <p><strong>OR</strong></p>
                <h2>Upload your own!</h2>
                <p><small>maximum file size <strong>(<%= speechMB %> MB)</strong></small></p>
                <form target="uploader" action="/uploader">
                    <a class="button" id="upload">Upload</a>
                    <input id="uploader" type="file" style="display: none" />
                    <input id="upload-submit" type="submit" value="Submit" style="display: none" />
                </form>
                <iframe name="uploader" style="display: none"></iframe>
            </div>
            <div id="choices">
                <div class="list"></div>
                <a class="button" id="generate">DO IT!</a>
            </div>
        </div>
    </body>
</html>
